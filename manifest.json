{
  "manifest_version": 3,
  "name": "ささっとスクショで囲もう",
  "version": "1.3.0",
  "description": "Webページのスクリーンショットを撮影し、注釈を追加できる拡張機能",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "clipboardWrite",
    "desktopCapture",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["editor.html", "assets/*", "icons/*"],
    "matches": ["<all_urls>"]
  }]
} 